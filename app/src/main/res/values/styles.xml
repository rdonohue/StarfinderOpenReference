<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/textColor</item>
        <item name="colorPrimaryDark">@color/darkBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name = "android:textColor">@color/lightBlueText</item>
        <item name = "android:tint">@color/tintColor</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="EditTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darkBackground</item>
        <item name = "android:textColorHint">@color/lightBlueText</item>
        <item name="android:background">@color/tintColor</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name = "ButtonStyle" >

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darkBackground</item>
        <item name = "android:background">@color/tintColor</item>
        <item name = "android:padding">20dp</item>


    </style>

</resources>